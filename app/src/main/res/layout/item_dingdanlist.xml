<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/img_item_dingdan"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher_round"/>
    <LinearLayout
        android:layout_toRightOf="@+id/img_item_dingdan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp">
        <TextView
            android:id="@+id/name_item_dingdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="大盘鸡"
            android:textSize="20dp"/>
        <TextView
            android:id="@+id/time_item_dingdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2018-12-20"/>
    </LinearLayout>
    <LinearLayout
        android:layout_centerInParent="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/statue_item_dingdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在烹饪"
            android:textColor="@color/colorAccent"
            android:layout_marginRight="10dp"/>
        <TextView
            android:id="@+id/details_item_dingdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:text="订单详情>"/>

    </LinearLayout>

</RelativeLayout>