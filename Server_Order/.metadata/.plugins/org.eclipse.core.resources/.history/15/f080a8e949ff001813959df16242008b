//			jsonObject.put("password", user.getPassword());
//			jsonObject.put("id", user.getId());
//			
//		}
//		
//		
//		try {
//			response.getWriter().write(jsonObject.toString());
//		} catch (IOException e) {
//			// TODO Auto-generated catch block
//			e.printStackTrace();
//		}

		
	}

}
